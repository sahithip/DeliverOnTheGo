<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/driverSignUpLayout">
        <TextView android:text="@string/AppName" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:id="@+id/textView3" />


               <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"
            android:id="@+id/driverSignUpFrame">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:id="@+id/textView5"
                android:layout_gravity="left|top"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp" />
                   <EditText
                       android:layout_width="210dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/firstName"
                       android:layout_gravity="right|top"
                       android:layout_marginLeft="20dp"
                       android:layout_marginTop="10dp"
                       android:singleLine="true"
                       android:visibility="visible" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:id="@+id/textView7"
                android:layout_gravity="left|top"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="10dp" />



            <EditText
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:id="@+id/lastName"
                android:layout_gravity="right|top"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="70dp"
                android:singleLine="true"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email ID"
                android:id="@+id/textView8"
                android:layout_gravity="left|top"
                android:layout_marginTop="190dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="160dp" />

            <EditText
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:id="@+id/emailid"
                android:layout_gravity="right|top"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="190dp"
                android:singleLine="true"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:id="@+id/textView6"
                android:layout_gravity="left|top"
                android:layout_marginTop="250dp"
                android:layout_marginLeft="10dp" />

            <EditText
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:id="@+id/password"
                android:layout_gravity="right|top"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="250dp"
                android:singleLine="true"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:id="@+id/textView9"
                android:layout_gravity="left|top"
                android:layout_marginTop="320dp"
                android:layout_marginLeft="10dp" />

            <EditText
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:id="@+id/phoneNumber"
                android:layout_gravity="right|top"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="320dp"
                android:singleLine="true"
                android:visibility="visible" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up as Driver"
                android:id="@+id/driverSignup"
                android:layout_marginTop="400dp"
                android:layout_marginLeft="100dp"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driver License "
                android:id="@+id/textView10"
                android:layout_gravity="left|top"
                android:layout_marginTop="130dp"
                android:layout_marginLeft="10dp" />

            <EditText
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:id="@+id/driverLicense"
                android:layout_gravity="right|top"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="130dp"
                android:singleLine="true"
                android:visibility="visible" />

        </FrameLayout>

    </LinearLayout>

</ScrollView>
